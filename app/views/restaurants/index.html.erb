<%= render "layouts/header"%>
<div class="container mt-5 p-3">
<div class="alert alert-primary alert-dismissible fade show d-flex justify-content-between align-items-center" style="margin-top:-30px" role="alert">
  <div><strong>Hey!</strong> Take a look to the following restaurants and select to review it!</div>
  <%= link_to "Add Restaurant", new_restaurant_path(@restaurant), class: "btn btn-primary align-self-top" %>
</div>
  <h1 class="mb-5">All Restaurants</h1>
<div class="list-group">
<% @restaurants.each do |restaurant| %>
  <a href="restaurants/<%= restaurant.id%>" class="list-group-item list-group-item-action flex-column align-items-start">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1"><%= restaurant.name %></h5>
      <small class="text-muted"></small>
    </div>
    <p class="mb-1"><%= restaurant.address %></p>
    <small class="text-muted"><%= restaurant.phone_number %></small>
  </a>
<% end %>
</div>
</div>
